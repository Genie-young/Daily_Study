<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.folderblelayout">


    <application
        android:allowBackup="true"
        android:label="FoldableLayout"
        android:theme="@style/AppTheme"
        >

        <activity
            android:name=".activities.UnfoldableDetailsActivity"
            android:label="Unfoldable details">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.FoldableListActivity"
            android:label="Foldable list" />

    </application>

</manifest>